/* 轮播图 */
.mcontainer{
  width: 100%;
  height: 100%;
}
.swiper-box{
   position: relative;
}
.home-swiper{
  height: 424rpx;
  width: 100%;
  background-color: rgb(253, 82, 147);
}
.home-swiper .slide-image{
  width: 100%;
  height: 100%;
}
.home-round{
  position: absolute;
  width: 100%;
  height: 30rpx;
  left: 0;
  bottom: -17rpx;
}
/* 标题--平台介绍、联系客服、我的 */
.home-title{
  height: 70rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
/* 标题图片样式 */
.home-title image{
  width: 104rpx;
  height: 94rpx;
}
/* 内容区域--上门时间、预估重量等 */
.home-content{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
/* 内容--image样式 */
.home-content image{
  width: 48rpx;
  height: 48rpx;  
}
/* 内容--主要区域样式 */
.home-content-main{
  position: relative;
  padding: 40rpx;
  background-color: #f2eaed;
  margin: 40rpx;
  border-radius: 10rpx;
}
/* 内容--主要区域--文字样式 */
.home-content-main.font24{
  line-height: 88rpx;
}
.home-content-main-choose{
  border: 2rpx solid #f36e89;
  border-radius: 10rpx;
  background-color: #fbfbfb;  
}
.home-content-main-choose .line-1{
  width: 562rpx;
  position: absolute;
  left: 54rpx;
  /* padding-left: 14rpx; */
}
/* 内容--主要区域--时间--右侧样式 */
.home-content-main-time-right{
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
}
.home-content-main-weight-right{
  position: relative;
}
.home-content-main-address-right{
  position: relative;
}
.home-content-main-address-right .font24{
  overflow: hidden;
