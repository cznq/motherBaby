/* pages/home/index.wxss */
/* 轮播图 */
.home-swiper{
  height: 400rpx;
  width: 100%;
  background-color: #ccc;
}
/* 标题--平台介绍、联系客服、我的 */
.home-title{
  height: 116rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  margin-bottom: 10rpx;
}
/* 标题图片样式 */
.home-title image{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
}
/* 标题--左边 */
.homt-title-left{
  display: flex;
  flex: 1;
}
/* 标题--左边--文字 */
.home-title-left .font26{
  margin-left: 56rpx;
  margin-top: 8rpx;
}
/* 标题--中间 */
.homt-title-center{
  display: flex;
  flex: 1
}
/* 标题--中间--文字 */
.home-title-center .font26{
  margin-left: 56rpx;
  margin-top: 8rpx;
}
/* 标题--右边 */
.homt-title-right{
  display: flex;
  flex: 1;
}
/* 标题--右边--文字 */
.home-title-right .font26{
  margin-left: 56rpx;
  margin-top: 8rpx;
}
/* 内容区域--上门时间、预估重量等 */
.home-content{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
/* 内容--image样式 */
.home-content image{
  width: 48rpx;
  height: 48rpx;  
}
/* 内容--主要区域样式 */
.home-content-main{
  position: relative;
  margin: 40rpx;
}
/* 内容--主要区域--文字样式 */
.home-content-main.font24{
  line-height: 88rpx;
}
/* 内容--主要区域--时间--右侧样式 */
.home-content-main-time-right{
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
}
.home-content-main-weight-right{
  position: relative;
}
.home-content-main-address-right{
  position: relative;
}
.home-content-main-time-right view{
  margin-right: 56rpx;
}
.home-content-main-weight-right view{
  margin-right: 56rpx;
}
.home-content-main-address-right view{
  margin-right: 56rpx;
}
/* 内容--主要区域--预估重量盒子样式 */
.home-content-main-weight{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  /* text-align: center; */
  border: 1rpx solid #ccc;
}
.home-content-main-weight-left {
  margin-left: 66rpx;
}
.home-content-main-weight-left-tips{
  font-size: 24rpx;
  color: #8F9FF4;
}
.home-content-main-weight-right input{
  text-align: right;
  margin-right: 50rpx;
}
/* 内容--主要区域--时间 */
.home-content-main-time{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  text-align: center;
  border: 1rpx solid #ccc;
}
/* 内容--主要区域--时间--左侧--图片 */
.home-content-main-time-left image{
  position: absolute;
  left: 10rpx;
}
/* 内容--主要区域--时间--右侧--图片 */
.home-content-main-time-right image{
  position: absolute;
  right: 0;
  bottom: 20rpx;
}
.home-content-main-weight-left image{
  position: absolute;
  left: 10rpx;
}
.home-content-main-weight-right image{
  position: absolute;
  right: 0;
  top: 0;
}
.home-content-main-address-left image{
  position: absolute;
  left: 10rpx;
}
.home-content-main-address-right image{
  position: absolute;
  right: 0;
  top: 0;
}
/* 内容--主要区域--时间--左侧--文字样式 */
.home-content-main-time-left view{
  margin-left: 66rpx;
}

/* 内容--主要区域--取件地址盒子样式 */
.home-content-main-address{
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  text-align: center;
  border: 1rpx solid #ccc;
}
.home-content-main-address-left view{
  margin-left: 66rpx;
}
/* 预约须知 */
.home-content-appointment_notice{
  display: flex;
  justify-content: flex-end;
  margin:20rpx 0;
}
.home-content-appointment_notice image{
  width: 42rpx;
  height: 42rpx;
  /* margin-right: 5rpx; */
}
/* 内容--主要区域--备注盒子样式 */
.home-content-remarks{
  height: 88rpx;
  display: flex;
  border: 1rpx solid #ccc;
  align-items: center;
  align-content: center;
}
.home-content-remarks-left{
  width: 240rpx;
  display: flex;
  /* margin-top: 10rpx; */
  align-items: center;
  align-content: center;
}
.home-content-remarks-left image{
  margin-left: 10rpx;
  display: block;
  width: 48rpx;
  height: 48rpx;
}
.home-content-remarks-left .font28{
  margin-left: 10rpx;
}
textarea{
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
}
/* 确定预约按钮 */
.home-btn-confirm{
  background-color: #595858;
  color: #fff;
  margin: 42rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx; 
}
.home-content-appointment_notice-modal{
  position: absolute;
  width: 600rpx;
  height:860rpx;
  left: 0;
  top: 0;
  margin: 150rpx 74rpx;
  background-color: #fff;
  z-index: 100;
}
.home-content-appointment_notice-modal-btn{
  width: 200rpx;
  position: absolute;
}

